<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TechTalkApp" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
    </style>

    <style name="Theme.TechTalkApp.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
    </style>
</resources>